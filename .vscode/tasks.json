{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "reset ; make && make -C apcilib",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":
            {
                "base": "$gcc",
                "fileLocation":"absolute",
            }
        },
        {
            "label": "make",
            "type": "shell",
            "command": "reset ; make -C build",
            "group": {
                    "kind": "build",
                    "isDefault": true
            },
            "problemMatcher":{ "base": "$gcc", "fileLocation":"absolute"}
        }
    ]
}